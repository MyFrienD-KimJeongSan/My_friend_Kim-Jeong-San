<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="146dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/meetingItemCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/resultTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14.14dp"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/notosans_kr"
                android:includeFontPadding="false"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="3sp"
                android:text="정산 결과"
                android:textColor="#222B45"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="66.74dp"
                android:layout_height="13dp"
                android:layout_marginStart="8dp"
                android:alpha="0.12"
                android:background="#6F97FF"
                app:layout_constraintBottom_toBottomOf="@+id/resultTitleTV"
                app:layout_constraintStart_toStartOf="@+id/resultTitleTV" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13.15dp"
                android:fontFamily="@font/notosans_kr_medium"
                android:includeFontPadding="false"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="3sp"
                android:text="@string/today_date"
                android:textColor="#8f9bb3"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@id/resultTitleTV"
                app:layout_constraintStart_toEndOf="@id/resultTitleTV"
                app:layout_constraintTop_toTopOf="@id/resultTitleTV" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result1CL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.22dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resultTitleTV">

                <TextView
                    android:id="@+id/TV1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3sp"
                    android:text="김민지"
                    android:textColor="#222B45"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/arrow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow"
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    app:layout_constraintBottom_toBottomOf="@id/TV1"
                    app:layout_constraintStart_toEndOf="@id/TV1"
                    app:layout_constraintTop_toTopOf="@id/TV1" />

                <TextView
                    android:id="@+id/resultPayment1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3sp"
                    android:text="19,000"
                    android:textColor="#6F97FF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/won1TV"
                    app:layout_constraintTop_toTopOf="@id/TV1" />

                <TextView
                    android:id="@+id/won1TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20.22dp"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3sp"
                    android:text=" 원"
                    android:textColor="#8f9bb3"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/resultPayment1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/resultPayment1" />

                <TextView
                    android:id="@+id/TV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3sp"
                    android:text="이나영"
                    android:textColor="#222B45"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/arrow1"
                    app:layout_constraintTop_toTopOf="@id/TV1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/result2CL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.22dp"
                android:layout_marginTop="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/result1CL">

                <TextView
                    android:id="@+id/TV3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3sp"
                    android:text="박서연"
                    android:textColor="#222B45"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/arrow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow"
                    android:scaleX="0.4"
                    android:scaleY="0.4"
                    app:layout_constraintBottom_toBottomOf="@id/TV3"
                    app:layout_constraintStart_toEndOf="@id/TV3"
                    app:layout_constraintTop_toTopOf="@id/TV3" />

                <TextView
                    android:id="@+id/TV4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3sp"
                    android:text="김민지"
                    android:textColor="#222B45"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toEndOf="@id/arrow2"
                    app:layout_constraintTop_toTopOf="@id/TV3" />

                <TextView
                    android:id="@+id/resultPayment2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3sp"
                    android:text="44,000"
                    android:textColor="#6F97FF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/won2TV"
                    app:layout_constraintTop_toTopOf="@id/TV3" />

                <TextView
                    android:id="@+id/won2TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20.22dp"
                    android:fontFamily="@font/notosans_kr_medium"
                    android:includeFontPadding="false"
                    android:letterSpacing="0.06"
                    android:lineSpacingExtra="3sp"
                    android:text=" 원"
                    android:textColor="#8f9bb3"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/resultPayment2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/resultPayment2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>