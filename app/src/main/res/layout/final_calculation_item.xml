<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_marginTop="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/fc_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📌  최종 정산이 업데이트되었어요."
        android:textSize="16sp"
        android:fontFamily="@font/notosans_kr"
        android:textColor="#222B45"
        android:textStyle="bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15.26dp"
        android:layout_marginTop="15dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result1CL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.22dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fc_instruction">

        <TextView
            android:id="@+id/TV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3sp"
            android:text="김민지"
            android:textColor="#222B45"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:layout_constraintBottom_toBottomOf="@id/TV1"
            app:layout_constraintStart_toEndOf="@id/TV1"
            app:layout_constraintTop_toTopOf="@id/TV1" />

        <TextView
            android:id="@+id/resultPayment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3sp"
            android:text="19,000"
            android:textColor="#6F97FF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/won1TV"
            app:layout_constraintTop_toTopOf="@id/TV1" />

        <TextView
            android:id="@+id/won1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.22dp"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3sp"
            android:text=" 원"
            android:textColor="#8f9bb3"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/resultPayment1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/resultPayment1" />

        <TextView
            android:id="@+id/TV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3sp"
            android:text="이나영"
            android:textColor="#222B45"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@id/arrow1"
            app:layout_constraintTop_toTopOf="@id/TV1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/result2CL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.22dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result1CL">

        <TextView
            android:id="@+id/TV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3sp"
            android:text="박서연"
            android:textColor="#222B45"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow"
            android:scaleX="0.4"
            android:scaleY="0.4"
            app:layout_constraintBottom_toBottomOf="@id/TV3"
            app:layout_constraintStart_toEndOf="@id/TV3"
            app:layout_constraintTop_toTopOf="@id/TV3" />

        <TextView
            android:id="@+id/TV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3sp"
            android:text="김민지"
            android:textColor="#222B45"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@id/arrow2"
            app:layout_constraintTop_toTopOf="@id/TV3" />

        <TextView
            android:id="@+id/resultPayment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3sp"
            android:text="44,000"
            android:textColor="#6F97FF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/won2TV"
            app:layout_constraintTop_toTopOf="@id/TV3" />

        <TextView
            android:id="@+id/won2TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20.22dp"
            android:fontFamily="@font/notosans_kr_medium"
            android:includeFontPadding="false"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3sp"
            android:text=" 원"
            android:textColor="#8f9bb3"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@id/resultPayment2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/resultPayment2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/dateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/today_date"
        android:textSize="12sp"
        android:textColor="#8F9BB3"
        android:layout_marginStart="6dp"
        android:fontFamily="@font/notosans_kr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fc_instruction"
        app:layout_constraintBottom_toBottomOf="@id/fc_instruction"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        />

    <ImageButton
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:background="@drawable/btn_fc_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result2CL"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>