<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/splashTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/sans_kr"
        android:includeFontPadding="false"
        android:text="@string/splash_title"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="148dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:alpha="0.3"
        android:background="#6F97FF"
        app:layout_constraintBottom_toBottomOf="@+id/splashTitleTV"
        app:layout_constraintStart_toStartOf="@+id/splashTitleTV" />

    <TextView
        android:id="@+id/splashSubTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/splash_sub"
        android:textColor="@color/gray_text_color"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/splashTitleTV"
        app:layout_constraintTop_toBottomOf="@+id/splashTitleTV" />

    <ImageView
        android:id="@+id/mainPhotoIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/main_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashSubTV" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/kakaoLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/kakao_login_button"
        android:drawableLeft="@drawable/kakao_logo"
        android:fontFamily="@font/sans_kr"
        android:includeFontPadding="false"
        android:text="@string/start_kakao"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainPhotoIV"
        tools:ignore="RtlHardcoded" />
</androidx.constraintlayout.widget.ConstraintLayout>