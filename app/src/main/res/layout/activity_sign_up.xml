<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/back_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/firstCalculationTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/firstCalculationTextView" />

        <TextView
            android:id="@+id/firstCalculationTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/sans_kr"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="회원 정보 입력"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/grayLine"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:src="@drawable/line_1"
        app:layout_constraintTop_toBottomOf="@+id/topBarCL"
        android:background="#757575"/>

    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:fontFamily="@font/notosans_kr_medium"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#222b45"
        android:lineSpacingExtra="3sp"
        app:layout_constraintTop_toBottomOf="@id/grayLine"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:layout_marginStart="30dp"
        />

    <RelativeLayout
        android:id="@+id/nameRL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NameTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="1dp">

        <View
            android:id="@+id/nameETBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"/>

        <EditText
            android:id="@+id/nameET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="김민지"
            android:background="@android:color/transparent"
            android:fontFamily="@font/notosans_kr"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/AccountNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계좌번호"
        android:fontFamily="@font/notosans_kr_medium"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#222b45"
        android:lineSpacingExtra="3sp"
        app:layout_constraintTop_toBottomOf="@id/kakaoAccountRL"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/AccountNumberStarTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:fontFamily="@font/notosans_kr_medium"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#ff0000"
        android:lineSpacingExtra="3sp"
        app:layout_constraintTop_toBottomOf="@id/kakaoAccountRL"
        app:layout_constraintStart_toEndOf="@id/AccountNumberTextView"
        android:layout_marginStart="1dp"
        android:layout_marginTop="5dp"
        />



    <RelativeLayout
        android:id="@+id/signup_bank_name_edit_textbox"
        android:layout_width="56dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/AccountNumberTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="1dp"
        >

        <View
            android:id="@+id/signup_bank_textbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle">
        </View>

        <EditText
            android:id="@+id/signup_bank_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="은행"
            android:background="@android:color/transparent"
            android:fontFamily="@font/notosans_kr"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/signup_account_number_edit_box"
        android:layout_width="287dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/AccountNumberTextView"
        app:layout_constraintStart_toEndOf="@id/signup_bank_name_edit_textbox"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp">

        <View
            android:id="@+id/signup_account_number_textbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle">
        </View>

        <EditText
            android:id="@+id/signup_account_number_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            android:ems="10"
            android:inputType="phone"
            android:hint="계좌번호를 입력해주세요."
            android:background="@android:color/transparent"
            android:fontFamily="@font/notosans_kr"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/kakaoAccountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameRL"
        android:text="카카오 계정"
        android:fontFamily="@font/notosans_kr_medium"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="#222b45"
        android:lineSpacingExtra="3sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        />


    <RelativeLayout
        android:id="@+id/kakaoAccountRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kakaoAccountTextView"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginTop="1dp"
        >

        <View
            android:id="@+id/kakaoAccountETBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"></View>

        <EditText
            android:id="@+id/kakaoAccountET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/notosans_kr"
            android:hint="abcdef@gmail.com"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent" />

    </RelativeLayout>


