<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/signup_top_bar"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/top_bar_signup"
            />

        <ImageView
            android:id="@+id/signup_line1"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:src="@drawable/line_1"
            app:layout_constraintTop_toBottomOf="@+id/signup_top_bar"
            android:background="#757575"/>

        <ImageView
            android:id="@+id/signup_name_text"
            android:layout_width="41dp"
            android:layout_height="19dp"
            android:src="@drawable/text_name_signup"
            app:layout_constraintTop_toBottomOf="@id/signup_line1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginStart="34dp"
            />

        <RelativeLayout
            android:id="@+id/signup_name_edit_textbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_name_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="16dp">

            <View
                android:id="@+id/signup_name_textbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"/>

            <EditText
                android:id="@+id/signup_name_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="이름을 입력해주세요."
                android:background="@android:color/transparent"
                android:fontFamily="@font/notosans_kr"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/signup_account_number_text"
            android:layout_width="59dp"
            android:layout_height="19dp"
            android:src="@drawable/text_account_number_signup"
            app:layout_constraintTop_toBottomOf="@id/signup_name_edit_textbox"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="16dp"
            />

        <RelativeLayout
            android:id="@+id/signup_bank_name_edit_textbox"
            android:layout_width="56dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/signup_account_number_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="16dp"
            >

            <View
                android:id="@+id/signup_bank_textbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle">
            </View>

            <EditText
                android:id="@+id/signup_bank_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="은행"
                android:background="@android:color/transparent"
                android:fontFamily="@font/notosans_kr"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/signup_account_number_edit_box"
            android:layout_width="287dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/signup_account_number_text"
            app:layout_constraintStart_toEndOf="@id/signup_bank_name_edit_textbox"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp">

            <View
                android:id="@+id/signup_account_number_textbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle">
            </View>

            <EditText
                android:id="@+id/signup_account_number_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                android:ems="10"
                android:inputType="phone"
                android:hint="계좌번호를 입력해주세요."
                android:background="@android:color/transparent"
                android:fontFamily="@font/notosans_kr"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/signup_email_text"
            android:layout_width="56dp"
            android:layout_height="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_bank_name_edit_textbox"
            android:src="@drawable/text_email_signup"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="16dp"
            />

        <RelativeLayout
            android:id="@+id/signup_email_edit_textbox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_email_text"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="16dp">

            <View
                android:id="@+id/signup_email_textbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"></View>

            <EditText
                android:id="@+id/signup_email_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/notosans_kr"
                android:hint="이메일을 입력해주세요."
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/signup_pwd_text"
            android:layout_width="71dp"
            android:layout_height="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_email_edit_textbox"
            android:src="@drawable/text_pwd_signup"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="16dp"
            />

        <RelativeLayout
            android:id="@+id/signup_pwd_edit_textbox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_pwd_text"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="16dp">

            <View
                android:id="@+id/signup_pwd_textbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle">
            </View>

            <EditText
                android:id="@+id/signup_pwd_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/notosans_kr"
                android:hint="6자리 이상 입력해주세요."
                android:inputType="textPassword"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/signup_pwd_check_text"
            android:layout_width="104dp"
            android:layout_height="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_pwd_edit_textbox"
            android:src="@drawable/text_check_pwd_signup"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="16dp"
            />

        <RelativeLayout
            android:id="@+id/signup_check_pwd_edit_textbox"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_pwd_check_text"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="16dp">

            <View
                android:id="@+id/signup_check_pwd_textbox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle">
            </View>

            <EditText
                android:id="@+id/signup_check_pwd_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="14dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/notosans_kr"
                android:hint="6자리 이상 입력해주세요."
                android:inputType="textPassword"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent" />
        </RelativeLayout>

